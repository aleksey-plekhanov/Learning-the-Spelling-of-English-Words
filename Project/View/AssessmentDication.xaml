<Page x:Class="Spelling_of_words.View.AssessmentDication"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Spelling_of_words.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AssessmentDication">

    <Grid>
        <Grid>
            <Grid.Background>
                <ImageBrush ImageSource="/View/background.png"/>
            </Grid.Background>
            <Image HorizontalAlignment="Left" Height="25" Margin="765,10,0,0" VerticalAlignment="Top" Width="25" Source="/View/icon-close.png" MouseLeftButtonDown="btn_closeApp"/>
            <Button Content="Работа над ошибками" HorizontalAlignment="Left" Margin="159,375,0,0" VerticalAlignment="Top" Height="45" Width="200" Click="btn_worksOnBugs" FontSize="16" FontFamily="Calibri">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>
            <Label x:Name="label_estimation" Content="5" HorizontalAlignment="Center" VerticalAlignment="Top" Height="190" Width="98" FontSize="130" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="0,76,0,0" Foreground="White"/>
            <Label Content=" Оценка" HorizontalAlignment="Center" Margin="0,76,0,0" VerticalAlignment="Top" Height="42" Width="98" FontSize="22" Foreground="White" FontWeight="Bold" FontFamily="Bahnschrift SemiBold"/>
            <Label Content="Результат диктанта" HorizontalAlignment="Center" Margin="0,22,0,0" VerticalAlignment="Top" Height="50" Width="296" FontSize="30" Foreground="White" FontWeight="Bold" FontFamily="Bahnschrift SemiBold"/>
            <Label Content="Результат:" HorizontalAlignment="Left" Margin="255,281,0,0" VerticalAlignment="Top" Width="140" FontSize="16" Foreground="White" Height="30" FontWeight="Bold"/>
            <Label x:Name="label_procentresult" Content="100%" HorizontalAlignment="Left" Margin="255,304,0,0" VerticalAlignment="Top" Foreground="White" Height="30" Width="60" FontSize="16" FontWeight="Bold"/>
            <Label Content="Набрано баллов:" Margin="503,283,0,0" VerticalAlignment="Top" FontSize="16" Foreground="White" Height="30" HorizontalAlignment="Left" FontWeight="Bold"/>
            <Label x:Name="label_countscore" Content="24 из 25" Margin="504,306,0,0" VerticalAlignment="Top" Foreground="White" Height="30" HorizontalAlignment="Left" FontWeight="Bold" FontSize="16"/>
            <Image Source="/View/count_score.png" Margin="432,276,288,94" Width="80" Height="80" />
            <Button Content="Выйти в главное меню" Margin="448,375,152,0" VerticalAlignment="Top" Height="45" RenderTransformOrigin="0.5,0.992" Click="btn_backMainMenu" Width="200" FontSize="16" FontFamily="Calibri">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>
            <Image Margin="187,284,543,96" Source="/procent_progress.png" Stretch="Fill" Width="70" Height="70"/>

        </Grid>

    </Grid>
</Page>
